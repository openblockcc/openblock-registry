{
    "extends": ["scratch", "scratch/node"],
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "globals": {
        "fetch": "readonly"
    },
    "rules": {
        "no-console": "off",
        "no-use-before-define": ["error", {
            "functions": false,
            "classes": true,
            "variables": true
        }],
        
        // NOTE:
        // eslint@5 + babel-eslint can crash in the core `indent` rule when parsing
        // modern JS constructs (e.g. TemplateLiteral nodes coming from Babel AST).
        // We disable it here to prevent `npm run lint` from crashing.
        "indent": "off",
        "max-len": ["error", {
            "code": 150,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }],
        "no-unused-vars": ["error", {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
        }]
    }
}